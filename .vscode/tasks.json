{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Python Requirements",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-Command",
        "if (Test-Path 'requirements.txt') { pip install -r requirements.txt } else { Write-Host 'requirements.txt არ მოიძებნა' -ForegroundColor Yellow }"
      ],
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}